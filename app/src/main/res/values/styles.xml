<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ScoreButton">
        <item name="android:background">@drawable/score_button_green</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">@dimen/score_button_size</item>
        <item name="android:layout_height">@dimen/score_button_size</item>
    </style>

    <style name="ScoreText">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LargeListText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SingleDay">
        <item name="android:background">@drawable/single_day_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:minHeight">90dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
